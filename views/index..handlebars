<h1>Burgers!</h1>

      <h2 class="text-center">Burgers to eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    {{!-- <div class="col-sm-6"> --}}
      <h2 class="text-center">Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2 class="text-center">Add a Burger</h2>
  <form class="create-form text-center">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>

