  
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-center">EAT DA BURGER!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2 class="text-center">Order Again?</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2 class="text-center">Add a Burger</h2>
  <form class="create-form text-center">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add it!</button>
  </form>

</div>