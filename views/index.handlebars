<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" >
            <img src="/assets/css/burger.jpg" alt="burger" />
            <h1> Eat-Da-Burger! </h1>
        </div>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h1 class="text-center">Devour it!</h1>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h1 class="text-center">Add a Burger</h1>
  <form class="create-form text-center">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>

